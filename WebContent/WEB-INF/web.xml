<?xml version="1.0"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>MDS Web Service</display-name>

	<context-param>
		<param-name>javax.ws.rs.Application</param-name>
		<param-value>et.mds.service.MDSApplication</param-value>
	</context-param>

	<context-param>
		<param-name>resteasy.servlet.mapping.prefix</param-name>
		<param-value>/etmds</param-value>
	</context-param>

	<listener>
		<listener-class>
			org.jboss.resteasy.plugins.server.servlet.ResteasyBootstrap
		</listener-class>
	</listener>
	<listener>
		<listener-class>
			et.mds.init.InitOnStart
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>ETMDS</servlet-name>
		<servlet-class>
			org.jboss.resteasy.plugins.server.servlet.HttpServletDispatcher
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ETMDS</servlet-name>
		<url-pattern>/etmds/*</url-pattern>
	</servlet-mapping>

</web-app>